@model FoodMonkey.Models.announcement

@{
    ViewBag.Title = "Send Annoucement";
}

<h1>Send Annoucement</h1>

<form action="/Admin/SendAnnoucement" method="post">

    <hr />

    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Admin_id</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="admin_id">
            @Html.ValidationMessageFor(model => model.admin_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10 mb-3">
            <textarea class="form-control" name="description" rows="3"></textarea>
            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" name="status" value="active">
        </div>
    </div>
    
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Announcement")
</div>
