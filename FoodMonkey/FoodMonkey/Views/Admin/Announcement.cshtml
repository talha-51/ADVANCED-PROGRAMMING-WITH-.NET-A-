@model IEnumerable<FoodMonkey.Models.announcement>

@{
    ViewBag.Title = "Announcement";
}

<h1>Announcements</h1><br>

<p>
    <h3>@Html.ActionLink("Send Announcement", "SendAnnoucement")</h3>
</p><br><br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ann_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.admin_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ann_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.admin_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteAnnouncement", new {  id=item.ann_id })
        </td>
    </tr>
}

</table>
