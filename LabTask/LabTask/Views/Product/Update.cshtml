@model LabTask.Models.Product
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
<form action="/product/update?id=@Model.Id" method="post">
    Product Name : <input type="text" name="ProductName" class="form-control" value="@Model.ProductName"/>
    @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })<br />
    Price: <input type="number" name="price" class="form-control"  value="@Model.Price" />
    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })<br />
    Quantity:<input type="number" name="Quantity" class="form-control"  value="@Model.Quantity"/>
    @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })<br />
    Description: <input type="text" name="Description" class="form-control"  value="@Model.Description" />
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })<br />
    <input type="submit" value="Update" class="btn btn-primary" />
</form>
